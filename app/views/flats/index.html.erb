<h1>All the flats</h1>


<ul>
  <% @flats.each do |flat| %>
    <li>
    <%= link_to flat.name, flat_path(flat) %>
    <%= link_to flat_path(flat), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fa-solid fa-trash-can"></i>
    <%end%>
  </li>
    <% end %>
</ul>

<%= link_to 'Create new flat', new_flat_path, class:"btn btn-primary"%>
