<div class="container">
  <div class="row justify-content-center">

  <h1>All our flats (<%= @flats.length %>)</h1>


  <% @flats.each do |flat| %>
    <div class="col-12 col-md-6 col-lg-4">
      <div class="carte">
      <div class="flat-image" style="background-image: url(https://source.unsplash.com/random/500Ã—<%=290 + flat.id %>);"></div>
      <div class="carte-top">
          <h2><%= flat.name  %></h2>
          <div class="carte-top-info">
            <p class="nog"><i class="fa-solid fa-person"></i><%= flat.number_of_guests %></p>
            <p class = "ppn"><i class="fa-solid fa-dollar-sign"></i><%= flat.price_per_night %></p>
            <%= link_to flat_path(flat), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="fa-solid fa-trash-can"></i>
            <% end %>
          </div>
        </div>
        <div class="carte-btm">
          <%= link_to 'More info', flat_path(flat), class:"btn btn-primary" %>
        </div>
        </div>
    </div>
  <% end %>


  <%= link_to 'Create new flat', new_flat_path, class:"btn btn-primary"%>

  </div>
</div>
